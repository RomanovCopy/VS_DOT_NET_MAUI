<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ScriptumSecuris.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ScriptumSecuris"
    Shell.FlyoutBehavior="Flyout"
    Title="ScriptumSecuris">

    <!--Основное меню приложения-->
    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <!-- Настройки -->
    <!--
    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>-->

    <!-- Меню File -->
    <MenuItem Text="File" IsEnabled="False">
        <!-- Заголовок меню, не кликабельный -->
        <MenuItem Text="Open" Clicked="OnOpenClicked" />
        <MenuItem Text="Save" Clicked="OnSaveClicked" />
        <MenuItem Text="Save As" Clicked="OnSaveAsClicked" />
    </MenuItem>
</Shell>
